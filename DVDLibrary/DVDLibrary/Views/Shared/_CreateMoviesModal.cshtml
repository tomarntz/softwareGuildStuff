<button type="button" class="btn btn-primary btn-lg" id="btnShowAddMovie">Add Movie</button>

<div class="modal fade" id="addMovieModal" tabindex="-1" role="dialog"
     aria-labeledby="myModalLable" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLable">Add Movie</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-6">
                        <h2>Create Movie</h2>
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" id="Title" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label>MPAA Rating</label>
                            <input type="text" id="MPAARating" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label>RealseDate</label>
                            <input type="text" id="RealseDate" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label>Studio</label>
                            <input type="text" id="Studio" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label>Actor Name</label>
                            <input type="text" id="ActorName" class="form-control"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button class="btn btn-primary" id="btnSaveMovie">Save</button>
            </div>
        </div>
    </div>
</div>
