@model Models.Weapon
@{
    ViewBag.Title = "DeleteWeapon";
}

<h2>DeleteWeapon</h2>

<div class="row">
    <div class="col-xs-12">
        <h3>Delete Weapon</h3>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.WeaponId)
            <p>Are you sure that you wish to delete the weapon @Html.DisplayFor(m => m.Title)?</p>
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "AdminHome", "Admin", null, new { @class = "btn btn-sm btn-info" })
        }
    </div>
</div>   

@section styles
{
    <link rel="stylesheet" type="text/css" href="~/Content/app/LoginStyleSheet.css">
}
