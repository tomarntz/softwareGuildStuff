@model StabBlog.Models.ViewModels.WeaponVM

@{
    ViewBag.Title = "EditWeapon";
}

<h2>Edit Weapon</h2>

<div class="row">
    @using (Html.BeginForm("EditWeapon", "Admin", FormMethod.Post, new { @id = "postForm" }))
    {
        @Html.HiddenFor(m => m.Weapon.WeaponId)
        <div class="form-group">
            <label>Enter the Name of the Weapon</label>
            @Html.TextBoxFor(m => m.Weapon.Title, new {@class = "form-control", placeholder = Model.Weapon.Title})
        </div>

        <div class="form-group">
            <label>Enter image Path for the weapon:</label>
            @Html.TextBoxFor(m => m.Weapon.ImagePath, new { @class = "form-control", placeholder = Model.Weapon.ImagePath })
        </div>

        <div class="form-group">
            <label>What Exhibit is this weapon in:</label>

            @Html.DropDownListFor(m => m.Weapon.ExhibitId, Model.Exhibits, "Select an Exhibit", new {@class = "form-control"})
        </div>

        <div class="form-group">
            <label>Enter Your Content Below</label>
            <div class="row">
                @Html.TextAreaFor(m => m.Weapon.Content, new { @class = "form-control", placeholder = Model.Weapon.Content })
            </div>
        </div>

        <div class="form-group">
            <label>Is this weapon coming soon to the exhibit:</label>
            @Html.CheckBoxFor(m => m.Weapon.ComingSoon, new { @class = "form-control" })
        </div>

        <span>
            <button class="btn btn-primary" type="submit">Submit</button>
            @Html.ActionLink("Cancel", "AdminHome", "Admin", null, new { @class = "btn btn-sm btn-danger" })
        </span>
    }
</div>

@section scripts{
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/CustomWeaponTinyMce.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/app/Validation-Default.js"></script>
    <script src="~/Scripts/app/WeaponPostValidation.js"></script>
}

@section styles
{
    <link rel="stylesheet" type="text/css" href="~/Content/app/LoginStyleSheet.css">
}
