@model StabBlog.Models.ViewModels.BlogPostVM
@{
    ViewBag.Title = "EditBlog";
}

<h2>EditBlog</h2>


<div class="row">
    @using (Html.BeginForm("EditBlog", "Admin", FormMethod.Post, new {@id="postForm"}))
    {
        @Html.HiddenFor(m=>m.Post.BlogId)
        <div class="form-group">
            <label>Blog Post Title</label>
            @Html.TextBoxFor(m => m.Post.Title, new {@class = "form-control", placeholder = Model.Post.Title})
        </div>
        <div class="form-group">
            <label>Enter your Blog Post Image Path:</label>
            @Html.TextBoxFor(m => m.Post.ImagePath, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Enter Your Content Below</label>
            <div class="row">
                @Html.TextAreaFor(m => m.Post.Content, new { @class = "form-control",placeholder=Model.Post.Content })
            </div>
        </div>
        <div class="form-group">
            <label>Enter your tags seperated by a space:</label>
            @Html.TextAreaFor(m => m.Post.Tags, new { @class = "form-control" ,placeholder=Model.Post.Tags})
        </div>
        <div class="form-group">
            <label>Please Select The Categories</label>
            <div class="row">
                <span>
                    @foreach (var cat in Model.Categories)
                    {
                        <span><input type="checkbox" name="checkboxList" value="@cat.CategoryId" /> @cat.CategoryName</span>
                    }
                </span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-danger">@Html.ActionLink("Cancel", "AdminHome", "Admin")</button>
    }
</div>

@section scripts{
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/CustomPostTinyMce.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/app/Validation-Default.js"></script>
    <script src="~/Scripts/app/BlogPostValidation.js"></script>
}

@section styles
{
    <link rel="stylesheet" type="text/css" href="~/Content/app/LoginStyleSheet.css">
}
