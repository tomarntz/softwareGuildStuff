<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    @RenderSection("styles", false)



</head>
<body class="body">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Historical Weaponry Guild", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Blog History", "BlogHome", "Blog")</li>
                    <li>@Html.ActionLink("Current Exhibits", "ExhibitHome", "Exhibit")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <footer class="footer">
            <div class="row">
                <div class="col-xs-12 footerCol">

                    <div class="row">
                        <div class="col-sm-3 col-xs-12">
                            <p>
                                Historical Weaponry Guild Museum<br />
                                3 Wilson Lane<br />
                                Monmouth Jct, NJ 08852<br />
                                888.867.5309
                            </p>
                        </div>
                        <div class="col-sm-2 col-xs-12 footerCol">
                            <p>
                                Ben Dover<br />
                                Museum Curator<br />
                                bdover@@guild.com
                            </p>
                        </div>
                        <div class="col-sm-2 col-xs-12 footerCol">
                            <img src="~/Content/app/Logo/STAB Logo.jpg" alt="Logo" style="height: 100px; width: auto" />
                        </div>
                        <div class="col-sm-2 col-xs-12 footerCol">
                            <p>Richard Head<br/>
                                Site Contributor<br/>
                                rhead@@guild.com
                            </p>
                        </div>
                        <div class="col-sm-3 col-xs-12 footerCol">
                            <p>
                                STAB Developmet<br />
                                Site developers<br />
                                stabd@@guild.com<br />
                                @Html.ActionLink("Admin Home", "AdminHome", "Admin")
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="" type="text/javascript"></script>
    <script src="~/Scripts/jquery.dotdotdot.min.js" type="text/javascript"></script>
</body>
</html>
