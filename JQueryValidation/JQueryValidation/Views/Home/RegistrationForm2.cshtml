@model JQueryValidation.Models.RSVPResponse
@{
    ViewBag.Title = "RegistrationForm2";
}

<h2>RegistrationForm2</h2>

<div class="row">
    <div class="col-lg-6">
        <h3>RSVP Form 2</h3>
        @using (Html.BeginForm("RegistrationForm", "Home", null, FormMethod.Post, new { id = "rsvpForm" }))
        {
            <div class="form-group">
                <label>Your Name</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Your Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Your Phone</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Your Favorite Game</label>
                @Html.TextBoxFor(m => m.FavoriteGame, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Will You Attend</label>
                @Html.DropDownListFor(m => m.WillAttend, new[]
                {
                    new SelectListItem() {Text = "Yes", Value = bool.TrueString},
                    new SelectListItem() {Text = "No", Value = bool.FalseString}
                }, "Choose an option", new { @class = "form-control" })
            </div>
            <button class="btn btn-primary">Submit</button>
        }
    </div>
</div>
@section scripts
{
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/app/jquery-validate-default.js"></script>
    <script src="~/scripts/app/rsvpValidation.js"></script>
}
