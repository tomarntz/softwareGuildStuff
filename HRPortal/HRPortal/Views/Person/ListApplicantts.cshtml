@using HRPortal.Models.Repositories.JobRepos
@model IEnumerable<HRPortal.Models.Data.Person>
@{
    ViewBag.Title = "ListApplicantts";
}

<h2>All Applicants</h2>

<div class="row">
    <div class="col-xs-12">
        <h4>Applicant List</h4>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Fist Name</th>
                    <th>Last Name</th>
                    <th>Position Applied for</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.FirstName</td>
                        <td>@p.LastName</td>
                        <td>@JobRepository.GetAllJobs().First(m=>m.JobId == p.JobId)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 