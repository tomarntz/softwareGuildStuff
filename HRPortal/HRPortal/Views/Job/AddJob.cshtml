@model HRPortal.Models.Data.Job
@{
    ViewBag.Title = "AddJob";
}


<div class="row">
    <div class="col-xs-12">
        <h2>Add Job Listing</h2>
        @Html.ActionLink("Return to Jobs", "Jobs", "Job")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("AddJob", "Job", null, FormMethod.Post, new {id = "jobForm"}))
        {
            <div class="form-group">
                <label>Job Title</label>
                @Html.TextBoxFor(m => m.Position, new {@class = "form-control"})
                @Html.ValidationMessageFor(m=>m.Position)
                <br/>
                <label>Job Discription</label>
                @Html.TextAreaFor(m => m.Discription, new {@class = "form-control"})
                @Html.ValidationMessageFor(m=>m.Discription)
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>

@section scripts{
